<h1>User: <%= @user.full_name %></h1>
</br>
<table class="table table-striped table-bordered">
  <tr>
    <td>
      <strong>First Name</strong>
	</td>
	<td>
	  <%= @user.first_name %>
	</td>
  </tr>
  <tr>
	<td>
      <strong>Last Name</strong>
	</td>
	<td>
	  <%= @user.last_name %>
	</td>
  </tr>
  <tr>
	<td>
      <strong>Email Address/Account</strong>
	</td>
	<td>
	  <%= @user.email %>
	</td>
  </tr>
</table>
<%= link_to 'Delete User',  { action: :destroy, id: @user.id }, class: 'btn btn-default' %>
<%= link_to 'Show All Users',  { action: :index }, class: 'btn btn-default' %>
