<table  class="table table-striped table-bordered">
  <tr>
    <th>
      Email Address/Username
    </th>
    <th>
      First Name
    </th>
    <th>
      Last Name
    </th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= link_to user.email, controller: "users", action: "show", id: user %>
      </td>
      <td>
        <%= user.first_name %>
      </td>
      <td>
        <%= user.last_name%>
      </td>
    </tr>
  <% end %>
</table>
</br>
<%= link_to "Add New User", {:controller => "users", :action => "new"}, {:class => "btn btn-default"} %>
