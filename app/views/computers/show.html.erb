<h1>Computer: <%= @computer.name %></h1>
</br>
<table class="table table-striped table-bordered">
  <tr>
    <td>
      <strong>Network Name</strong>
	  </td>
	  <td>
	    <%= @computer.name %>
	  </td>
  </tr>
  <tr>
	  <td>
      <strong>Assigned User</strong>
	  </td>
	  <td>
      <% if @computer.user_id == nil || @user.id == nil %>
        (No user assigned!)
      <% else %>
	      <%= link_to @user.full_name, controller: "users", action: "show", id: @user.id %>
      <% end %>
	  </td>
  </tr>
  <tr>
	<td>
      <strong>Operating System</strong>
	</td>
	<td>
	  <%= @computer.os %>
	</td>
  </tr>
  <tr>
	<td>
      <strong>Notes</strong>
	</td>
	<td>
	  <%= @computer.notes %>
	</td>
  </tr>
  <tr>
    <td>
      <strong>Deployment Date</strong>
	  </td>
	<td>
	  <%= @computer.deployment_date %>
	</td>
  </tr>
  <tr>
	<td>
      <strong>Verification Date</strong>
	</td>
	<td>
	  <%= @computer.verification_date %>
	</td>
  </tr>
  <tr>
    <td>
      <strong>Warranty Expiration Date</strong>
    </td>
    <td>
      <%= @computer.warranty_date %>
    </td>
  </tr>
</table>
<%= link_to 'Delete Computer',  { action: :destroy, id: @computer.id }, class: 'btn btn-default' %>
<%= link_to 'Edit Computer',  { action: :edit, id: @computer.id }, class: 'btn btn-default' %>
<%= link_to 'Show All Computers',  { action: :index }, class: 'btn btn-default' %>
