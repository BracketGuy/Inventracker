<h1>Add New Site</h1>
<%= form_tag({:action => 'create', :controller => 'sites'}, {:role => 'form', :method => 'get'}) do %>
   <div class="form-group">
     <%= label_tag 'name', 'Site Name:' %>
     <%= text_field_tag 'name', nil, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= label_tag 'poc_name', 'POC Name:' %>
     <%= text_field_tag 'poc_name', nil, class: 'form-control' %>
   </div>
   <div class="form-group">
     <%= label_tag 'poc_phone', 'POC Phone Number:' %>
     <%= text_field_tag 'poc_phone', nil, class: 'form-control' %>
   </div>
   <%= submit_tag "Create", class: 'btn btn-default' %>
<% end %>
